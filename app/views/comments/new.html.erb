
<h2><%= @article.title %></h2><br />
<div class="image">
    <%= image_tag @article.image_url(:thumb) %>
  </div>
<%= @article.content %>
<h3>New Comment</h3>
<%= simple_form_for [@article, @article.comments.build] do |f| %> 
  <%= f.input :commenter %>
  <%= f.input :body %>
  <%= f.button :submit, 'Submit a Comment' %>
<% end %>

<%= link_to 'Back', articles_path %>