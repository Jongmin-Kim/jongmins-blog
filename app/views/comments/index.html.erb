<h2><%= @article.title %></h2><br />
 <div class="image">
    <%= image_tag @article.image_url(:thumb) %>
  </div>
<%= @article.content %>
<h3>Comments</h3>
<% @article.comments.each do |comment| %>
  <%= comment.created_at.strftime("%m/%d/%y") %><br />
  Commenter: <%= comment.commenter %><br />
  Comment: <%= comment.body %><br /><br />
<% end %>
<%= link_to 'Back', articles_path %>