<div class="index">
   <div class="button">
    <%= link_to 'New Post', new_blog_article_path(@blog, @article) %>
   </div>  
   <div class="message">
    <%= flash[:alert] %>
    <%= flash[:danger] %>
   </div>
   <h1><%= @blog.title %></h1>
   <p><%= @blog.description %></p>
</div>

<div class="big_container">
<div class="container text-center">
  <h1>Stories</h1>
</div>
<% @articles.each do |article| %>
  <div class="article">
  <div class="container article-title">
    <strong><%= article.title %></strong> 
    <%= article.created_at.strftime("%m/%d/%y") %><br />
  </div>
  <div class="container image">
    <%= image_tag article.image_url(:thumb) %>
  </div>
  <div class="container content">
    <%= article.content %><br />
  </div> 
  <div class="container">
  <%= link_to 'Edit', edit_blog_article_path(@blog, article), class: 'links' %> |
  <%= link_to 'Delete', blog_article_path(@blog, article), class: 'links', method: :delete, data: { confirm: 'Are you sure?'} %> 
  
  <br /><br />
  </div>
  </div>
  
<% end %>  
</div>

